<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">
      <div class="bs-component">
        <div class="list-group">
          <% teams.each do |team| -%>
            <div class="list-group-item">
              <div class="row-action-primary">
                  <i class="icon-material-whatshot"></i>
              </div>
              <div class="row-content">
                  <div class="least-content"><%= team.team_members.size -%>ppl</div>
                  <h4 class="list-group-item-heading"><%= team.slack_team_domain -%></h4>
                  <p class="list-group-item-text">...</p>
              </div>
            </div>
            <div class="list-group-separator"></div>
          <% end %>
        </div>
    </div>

    </div>
    
    <div class="col-md-1">
    </div>

    <div class="col-md-8">


      <table class="table table-striped table-hover ">
          <thead>
              <tr>
                  <th>#</th>
                  <th>Nickname</th>
                  <th>Ranking</th>
              </tr>
          </thead>
          <tbody>
            <% team_members.each_with_index do |tm, index| -%>
              <tr>
                <td><%= index +1 %></td>
                <td><%= tm.slack_user_name %></td>
                <td><%= tm.points %></td>
              </tr>
            <% end %>
          </tbody>
      </table>

    </div>
  </div>
</div>
